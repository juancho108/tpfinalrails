      <div class="box box-default">
        <div class="box-header with-border">
          <i class="fa fa-warning"></i>
          <h3 class="box-title">Noticias</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
          <%= render 'productos_superan_limite' %>
          <%= render 'cuentas_superan_limite' %>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div><!-- /.col -->
  <% end %>
</div>