

<div class="row">
  <div class="col-md-6">
    <div class="box box-success">
      <div class="box-header with-border">
        <h3 class="box-title">Nuevo Cliente</h3>
      </div><!-- /.box-header -->
      <div class="box-body">
        <%= form_for(@client) do |f| %>
          <% if @client.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

              <ul>
              <% @client.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <!-- text input -->
          <div class="form-group">
            <%= f.label :nombre, "Nombre:", class: "control-label" %>
            <%= f.text_field :nombre, class: "form-control", placeholder: "Ingrese nombre" %>
            <%= f.label :mail, "Mail:", class: "control-label" %>
            <%= f.email_field :mail, class: "form-control", placeholder: "Ingrese mail" %>
            <%= f.label :detalle_adicional, "Detalles Adicionales:", class: "control-label" %>
            <textarea  cols="24" rows="6" class="form-control" placeholder="Ingrese detalles adicionales"></textarea>
          </div>
      </div><!-- /.box-body -->
      <div class="box-footer">
        <%= f.submit 'Crear Cliente', class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>  
</div>