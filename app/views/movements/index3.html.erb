<p id="notice"><%= notice %></p>

<h1>Listing Movements</h1>

<table>
  <thead>
    <tr>
      <th>Operacion</th>
      <th>Tipo operacion</th>
      <th>Forma de pago</th>
      <th>Persona</th>
      <th>Monto neto</th>
      <th>Fecha operacion</th>
      <th>Detalles adicionales</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movements.each do |movement| %>
      <tr>
        <td><%= movement.operacion %></td>
        <td><%= movement.tipo_operacion %></td>
        <td><%= movement.forma_de_pago %></td>
        <td><%= movement.persona %></td>
        <td><%= movement.monto_neto %></td>
        <td><%= movement.fecha_operacion %></td>
        <td><%= movement.detalles_adicionales %></td>
        <td><%= link_to 'Show', movement %></td>
        <td><%= link_to 'Edit', edit_movement_path(movement) %></td>
        <td><%= link_to 'Destroy', movement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

